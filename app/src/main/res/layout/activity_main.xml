<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.appui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="20dp">
            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@android:color/white"
                android:id="@+id/toolbar" />
        </com.google.android.material.appbar.AppBarLayout>

    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="65dp" />

    <com.fxn.BubbleTabBar
        android:id="@+id/bubbleTabBar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:elevation="16dp"
        app:bubbletab_custom_font="@font/numans"
        app:bubbletab_disabled_icon_color="@android:color/white"
        android:background="@drawable/bottomshapeallcornersbottom"
        android:layout_gravity="bottom"
        android:padding="7dp"
        app:bubbletab_menuResource="@menu/bottom_menu"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>